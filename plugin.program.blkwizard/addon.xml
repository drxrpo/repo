<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.program.blkwizard" name="Black Wizard" version="1.0" provider-name="Black">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Black Wizard</summary>
    <description lang="en">Black Wizard allows you to get access to the latest Black Build.</description>
    <platform>all</platform>
  </extension>
</addon>